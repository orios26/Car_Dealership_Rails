<h1>Quotes</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle</th>
      <th>Customer</th>
      <th>Sales person</th>
      <th>Wholesale price</th>
      <th>Markup price</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.vehicle.vehicle_details %></td>
        <td><%= quote.customer.full_name %></td>
        <td><%= quote.sales_person.full_name %></td>
        <td><%= number_to_currency(quote.vehicle.price) %></td>
        <td><%= %></td>
        <td><%=  %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

